<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- dimensions -->
    <dimen name="image_width">200dp</dimen>
    <dimen name="image_final_width">40dp</dimen>
    <dimen name="spacing_normal">16dp</dimen>

    <dimen name="text_height">70dp</dimen>
    <dimen name="text_padding">16dp</dimen>
    <dimen name="pic_padding">15dp</dimen>

    <dimen name="am_btn_del">85dp</dimen>


    <!-- styles -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:listDivider">@drawable/spacer_medium</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <!-- strings -->
    <string name="app_name">Coordinator example</string>
    <string name="quila_name">Quila</string>
    <string name="quila_tagline">I love bones and slippers</string>
    <string name="quila_name2">Quila!</string>


</resources>